.page-catalog
	.bread-crumbs
		margin-bottom: 30px


		li
			position: relative
			line-height: 1
			display: inline

			&:hover 
				a 
					text-decoration: underline
					color: var(--mainColor)



			&:not(:first-child)
				margin-left: 30px

				&:before 
					content: ''
					position: absolute
					top: 7px
					left: -20px
					width: 10px
					height: 1px
					display: block
					background: #000


.page-portfolio
	.head
		position: relative

	.logo
		&-left
			color: var(--mainColor)
		&-top
			color: #C13333

		&-right
			color: #68AC64
		&-bot
			color: #D57730

		&-text
			&-first, &-last
				color: #000

	.wr-head-link
		display: flex
		flex-direction: column
		align-items: flex-start

	.head-link:not(:first-child)
		margin-left: 0

	.burger
		display: none !important

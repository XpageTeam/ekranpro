@media screen and (max-width: 1600px)

	.about-map-wr
		// transform: scale(.9)
@media screen and (max-width: 1300px)

	.about__map-marker span
		width: 5px
		height: 5px

@media screen and (max-width: 1000px)

	.about-map-wr
		padding: 0 1.4rem
		column-count: 3

		> img
			display: none

	.about__map
		&-el
			position: relative
			left: 0 !important
			top: 0 !important

		&-marker
			flex-direction: row
			align-items: center

		&-city
			display: block !important

		&-img
			border: 3px solid var(--mainColor)
			display: block
			width: 50px

			&-wr
				opacity: 1
				pointer-events: all
				padding-bottom: 0
				padding-left: 20px
				position: static
				transform: none
				left: 0

			img
				width: 45px
				height: 45px

			&.video
				&:before
					background-size: 14px

@media screen and (max-width: 660px)

	.about-map-wr
		padding: 0
		column-count: 1

	.about-map
		padding: 1.4rem


		.wrapper 
			padding: 0

		&__title
			font-size: 1.4rem
			padding-bottom: 25px

	.about__map

		&-el 
			&:not(:first-child)
				margin-top: 10px

		&-info
			opacity: 1
			width: auto
			position: relative
			pointer-events: all 
			padding-left: 20px
			text-align: left
			display: none

		&-city 
			font-size: rem(17)
			font-weight: 400

	.fancybox-caption
		bottom: calc(-100%) !important
		left: 0!important
		right: 0 !important

		&:before 
			display: none !important

	.fancybox-info-map
		.fancybox-content
			outline: none

		.fancybox-slide
			padding: 1.4rem !important




